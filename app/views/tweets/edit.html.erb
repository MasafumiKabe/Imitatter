<div class="text-left">
  <h3>投稿の編集</h3>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@tweet) do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
      <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to "一覧に戻る", root_path %>
  </div>
</div>
