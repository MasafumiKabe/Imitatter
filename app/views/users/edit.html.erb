<div class="text-left">
  <h3>ユーザ情報の編集</h3>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <% if @user.image? %>
      <%= image_tag @user.image.to_s, :size => "50x50" %>
    <% else %>
      <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 50 }) %>" alt="">
    <% end %>
    
    <%= form_for(@user) do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      
      <div class="form-group">
        <%= f.label :image, "プロフィール画像の変更" %>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :profile, 'Profile' %>
        <%= f.text_area :profile, class: 'form-control', rows: 5 %>
      </div>

      <%= f.submit 'プロフィールの更新', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
